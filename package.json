{
  "name": "grapesjs-parser-postcss",
  "version": "1.0.3",
  "description": "Custom CSS parser via PostCSS for GrapesJS",
  "main": "dist/index.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "lint": "eslint src",
    "test": "jest",
    "patch": "npm version patch -m 'Bump v%s'",
    "start": "grapesjs-cli serve",
    "build": "npm run test && grapesjs-cli build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GrapesJS/parser-postcss.git"
  },
  "keywords": [
    "grapesjs",
    "plugin",
    "parser",
    "css",
    "postcss",
    "wysiwyg"
  ],
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env",
          "@babel/preset-typescript"
        ]
      }
    }
  },
  "author": "Artur Arseniev",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.0",
    "@types/jest": "^29.5.5",
    "eslint": "^8.21.0",
    "grapesjs": "^0.21.7",
    "grapesjs-cli": "^4.1.3",
    "jest": "^29.7.0",
    "postcss": "^8.4.14"
  }
}
